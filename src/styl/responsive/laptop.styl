$header-height = 98px
$footer-height = 106px
$filter-height = 93px

#main-content
  min-height: calc('100vh - ' + ($header-height + $footer-height + $margin-large + $margin-mid)) 

#header
  .truth-logo
    height: 76px

.icon-arrow
  height: 23px

#portrait-sizer, .portrait
  padding: 0 $margin-tiny

// ******************************************************

// PORTRAITS

#portraits
  min-height: calc('100vh - ' + $header-height)

#portrait-sizer, .portrait
  padding: 0 $margin-tiny

#map-container
  min-height: calc('100vh - ' + ($header-height + $filter-height + $margin-small))
  max-height: calc('100vh - ' + ($header-height + $filter-height + $margin-small))

#map-portraits-wrapper

  &.show-map
    height: calc('100vh - ' + $header-height)

select.filter-select
  padding-left: 24px

.icon-select
  top: 11px
  width: 14px

.toggle-map
  .icon-arrow
    height: 16px

.icon-zoom
  width: 19px

// ******************************************************

// SINGLE

.single-content-container
  .wp-caption, img
    font-size: $font-size-small
    padding: $margin-basic 0
    img
      padding: 0

// ******************************************************

// SLIDER

.slick-slide
  margin: 0 $margin-small

.slick-dots
  margin-top: $margin-small
  li
    button
      height: $margin-small
      width: $margin-small
      border: ($margin-micro / 2) solid $color-black
      border-radius: $margin-small
      margin: 0 $margin-tiny
    &.slick-active
      button
        border: ($margin-micro / 2) solid $color-black

// ******************************************************

// BLOG

.blog-item
  margin-bottom: $margin-basic
